            <TextView
                android:id="@+id/txt_subject_name"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginHorizontal="20dp"
                android:text="SubjectName"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNumberOfStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_border"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="100 Students" />

                <TextView
                    android:id="@+id/txtCreditHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_border"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="4 Credits Hour" />

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_border"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Year 2" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewSubjectDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
